<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5b91e4"
    tools:context=".Activity.BolumActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/BolumLinerLayout1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAd"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hastane Adı Seçiniz."
            android:ems="15"
            android:textStyle="bold"
            android:id="@+id/Hastaneadinigir"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SpnrHastaneler"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bölüm Adı Seçiniz."
        android:ems="15"
        android:textStyle="bold"
            android:id="@+id/Bolumadinigir"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SpnrBolumler"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:id="@+id/BolumAdi"
            android:hint="Bölüm Adı Giriniz..."/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BolumLinerLayout1"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/BolumEkle"
        android:text="Bolum Ekle"
        />
    <Button
    android:id="@+id/BtnBolumGuncelle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/BolumLinerLayout1"
    android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
    android:text="Guncelle" />

    <Button
        android:id="@+id/BtnBolumSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BolumLinerLayout1"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Sil" />

</RelativeLayout>